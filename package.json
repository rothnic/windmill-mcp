{
  "name": "windmill-mcp",
  "version": "0.1.0",
  "description": "MCP server for Windmill API generated from OpenAPI specification",
  "main": "src/runtime/index.js",
  "type": "module",
  "bin": {
    "windmill-mcp": "./src/runtime/index.js"
  },
  "files": [
    "src/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "fetch-spec": "node src/generator/fetch-spec.js",
    "generate": "node src/generator/generate.js",
    "apply-overrides": "node src/overrides/apply-overrides.js",
    "validate-overrides": "node src/overrides/validate-overrides.js",
    "dev": "node build/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "test:coverage": "vitest run --coverage",
    "docker:up": "docker compose -f tests/docker/docker-compose.yml up -d",
    "docker:down": "docker compose -f tests/docker/docker-compose.yml down",
    "docker:logs": "docker compose -f tests/docker/docker-compose.yml logs -f",
    "docker:wait": "node tests/docker/wait-for-windmill.js",
    "docker:dev": "npm run docker:up && npm run docker:wait && echo '\n✅ Windmill ready at http://localhost:8000\n   Superadmin secret: test-super-secret\n   Default workspace: admins\n'",
    "docker:clean": "docker compose -f tests/docker/docker-compose.yml down -v",
    "dev:setup": "npm run docker:dev && npm run generate && cd build && npm install && npm run build",
    "dev:mcp": "cd build && npm run build && E2E_WINDMILL_URL=http://localhost:8000 E2E_WINDMILL_TOKEN=test-super-secret node build/index.js",
    "dev:mcp:ready": "npm run generate && cd build && npm install && npm run build && echo '✅ MCP server ready! Run: npm run dev:mcp'",
    "dev:mcp:full": "npm run dev:setup && npm run dev:mcp",
    "test:e2e:full": "npm run docker:up && npm run docker:wait && npm run test:e2e; EXIT_CODE=$?; npm run docker:down; exit $EXIT_CODE",
    "lint": "eslint .",
    "lint:structure": "ls-lint",
    "format": "prettier --write .",
    "validate": "npm run lint && npm run lint:structure && npm run validate-overrides",
    "docs:build": "jsdoc -c jsdoc.json",
    "docs:validate": "node scripts/validate-docs.js",
    "pregenerate": "npm run fetch-spec",
    "postgenerate": "npm run apply-overrides",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rothnic/windmill-mcp.git"
  },
  "keywords": [
    "windmill",
    "mcp",
    "model-context-protocol",
    "openapi",
    "api",
    "code-generation"
  ],
  "author": "rothnic",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rothnic/windmill-mcp/issues"
  },
  "homepage": "https://github.com/rothnic/windmill-mcp#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "dotenv": "^16.4.5",
    "tar": "^7.0.0"
  },
  "devDependencies": {
    "@ls-lint/ls-lint": "^2.3.1",
    "@types/node": "^20.11.0",
    "@vitest/ui": "^1.2.0",
    "eslint": "^8.56.0",
    "husky": "^9.1.7",
    "jsdoc": "^4.0.2",
    "msw": "^2.0.0",
    "prettier": "^3.2.4",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
