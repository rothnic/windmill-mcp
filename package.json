{
  "name": "windmill-mcp",
  "version": "0.1.0",
  "description": "MCP server for Windmill API generated from OpenAPI specification",
  "main": "src/index.js",
  "type": "module",
  "bin": {
    "windmill-mcp": "./src/index.js"
  },
  "files": [
    "src/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "fetch-spec": "node generator/fetch-spec.js",
    "generate": "node generator/generate.js",
    "apply-overrides": "node scripts/apply-overrides.js",
    "validate-overrides": "node scripts/validate-overrides.js",
    "dev": "node src/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "test:coverage": "vitest run --coverage",
    "docker:up": "docker compose -f tests/docker/docker-compose.yml up -d",
    "docker:down": "docker compose -f tests/docker/docker-compose.yml down",
    "docker:logs": "docker compose -f tests/docker/docker-compose.yml logs -f",
    "docker:wait": "node tests/docker/wait-for-windmill.js",
    "test:e2e:full": "npm run docker:up && npm run docker:wait && npm run test:e2e; EXIT_CODE=$?; npm run docker:down; exit $EXIT_CODE",
    "lint": "eslint .",
    "format": "prettier --write .",
    "validate": "npm run lint && npm run validate-overrides",
    "docs:build": "jsdoc -c jsdoc.json",
    "docs:validate": "node scripts/validate-docs.js",
    "pregenerate": "npm run fetch-spec",
    "postgenerate": "npm run apply-overrides"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rothnic/windmill-mcp.git"
  },
  "keywords": [
    "windmill",
    "mcp",
    "model-context-protocol",
    "openapi",
    "api",
    "code-generation"
  ],
  "author": "rothnic",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rothnic/windmill-mcp/issues"
  },
  "homepage": "https://github.com/rothnic/windmill-mcp#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "eslint": "^8.56.0",
    "jsdoc": "^4.0.2",
    "prettier": "^3.2.4",
    "vitest": "^1.2.0",
    "@vitest/ui": "^1.2.0",
    "msw": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
